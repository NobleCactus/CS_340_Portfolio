<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Andrew Eppinger and Joshua Luo - Video Game Database</title>
    <link rel="stylesheet" href="static/css/del_element.css" type="text/css">
  </head>
  <body>
    <div class="topnav">
    <table id="crudTable">
      <tr>
        <td><a href="/">Catalog</a></td>
        <td><a href="add">Add Something</a></td>
        <td><a href="delete">Delete Something</a></td>
        <td><a href="update">Update/Edit Something</a></td>
    </table>
    </div>

    <h1>Delete from Database</h1>
    <h3 id="searchHeader">Select what to delete:</h3>
    <br/>
    <table id="selDelEleTable">
      <tr>
        <td><button type="button" id="selTitleSearch">Video Game Title</button></td>
        <td><button type="button" id="selDevSearch">Development Studio</button></td>
        <td><button type="button" id="selPlatSearch">Platform</button></td>
        <td><button type="button" id="selFranchiseSearch">Franchise</button></td>
    </table>

    <br/>

    <div id="delTitleSearch">
      <h2 class="searchHeader">Search for a Video Game Title</h2>
      <table class="searchTable">
        <tr>
          <th>Title:</th>
          <th>Platform:</th>
          <th>Release Date:</th>
          <th>Genre:</th>
          <th>Franchise:</th>
          <th>Developer:</th>
          <th>ESRB Rating:</th>
        <tr>
          <td><input type="text" id="searchTitleName"></td>
          <td>
            <select id="searchTitlePlat">
              <option></option>
                <option value="PlayStation">PlayStation</option>
                <option value="PlayStation 2">PlayStation 2</option>
                <option value="PlayStation 3">PlayStation 3</option>
                <option value="PlayStation 4">PlayStation 4</option>
                <option value="PlayStation 5">PlayStation 5</option>
                <option value="Xbox">Xbox</option>
                <option value="Xbox 360">Xbox 360</option>
                <option value="Xbox One">Xbox One</option>
                <option value="Xbox Series S/X">Xbox Series S/X</option>
                <option value="Nintendo 64">Nintendo 64</option>
                <option value="GameCube">GameCube</option>
                <option value="Wii">Wii</option>
                <option value="Wii U">Wii U</option>
                <option value="Switch">Switch</option>
                <option value="Windows">Windows</option>
            </select>
          </td>
          <td>
            From:<br/><input type="date" id="searchTitleFromDate"><br/>To:<br/><input type="date" id="searchTitleToDate">
          </td>
          <td>
            <select id="searchTitleGenre">
              <option></option>
              <option value="fps">First-Person Shooter</option>\
              <option value="moba">Multiplayer Online Battle Arena</option>
            </select>
          </td>
          <td>
            <select id="searchTitleFranchise">
              <option></option>
              <option value="Call of Duty">Call of Duty</option>
              <option value="Halo">Halo</option>
            </select>
          </td>
          <td>
            <select id="searchTitleDev">
              <option></option>
              <option value="activision">Activision</option>
              <option value="343industries">343 Industries</option>
            </select>
          </td>
          <td>
            <select id="searchTitleESRB">
              <option></option>
              <option value="E">E - Everyone</option>
              <option value="T">T - Teen</option>
              <option value="M">M - Mature</option>
            </select>
          </td>
      </table>
      <button type="button" class="searchButton" id="searchTitleButton">Search</button>
    </div>

    <div id="delDevSearch">
      <h2 class="searchHeader">Search for a Development Studio</h2>
      <table class="searchTable">
        <tr>
          <th>Developer Name:</th>
          <th>Country:</th>
          <th>Founding Date:</th>
        <tr>
          <td><input type="text" id="searchDevName"></td>
          <td>
            <select id="searchDevCountry">
              <option></option>
              <option value="USA">USA</option>
            </select>
          </td>
          <td>From:<br/><input type="date" id="searchDevFromDate"><br/>To:<br/><input type="date" id="searchDevToDate"></td>
      </table>
      <button type="button" class="searchButton" id="searchDevButton">Search</button>                          
    </div>

    <div id="delPlatSearch">
      <h2 class="searchHeader">Search for a Platform</h2>
      <table class="searchTable">
        <tr>
          <th>Platform Name:</th>
          <th>Release Date:</th>
          <th>Platform Developer:</th>
          <th>Platform In Production:</th>
        <tr>
          <td><input type="text" id="searchPlatName"></td>
          <td>From:<br/><input type="date" id="searchPlatFromDate"><br/>To:<br/><input type="date" id="searchPlatToDate"></td>
          <td>
            <select id="searchPlatDev">
              <option></option>
              <option value="Microsoft">Microsoft</option>
              <option value="Sony">Sony</option>
            </select>
          </td>
          <td>
            <input type="radio" name="searchPlatInProduction" class="searchPlatInProd" value="Yes">Yes<br/>
            <input type="radio" name="searchPlatInProduction" class="searchPlatInProd" value="No">No<br/>
            <input type="radio" name="searchPlatInProduction" class="searchPlatInProd" value="Any">Any<br/>
          </td>
      </table>
      <button type="button" class="searchButton" id="searchPlatButton">Search</button>
    </div>

    <div id="delFranchiseSearch">
      <h2 class="searchHeader">Search for a Franchise</h2>
      <table class="searchTable">
        <tr>
          <th>Franchise Name:</th>
          <th>Franchise Developer:</th>
        <tr>
          <td><input type="text" id="searchFranchiseName"></td>
          <td>
            <select id="searchFranchiseDev">
              <option></option>
              <option value="Activision">Activision</option>
              <option value="343 Industries">343 Industries</option>
            </select>
          </td>
      </table>
      <button type="button" class="searchButton" id="searchFranchiseButton">Search</button>
    </div>

    <br/>
    <br/>

    <span class="sucessFailMessage" id="delSuccessful">Delete Successful!</span>
    <span class="sucessFailMessage" id="delSuccessful">Delete Failed!</span>

    <div id="searchResults">
      <h2 id="searchResHeader">Search Results</h2>
      <table id="searchResultTable">
        <tr>
          <th>Title</th>
          <th>Platforms</th>
          <th>
            <div>Release Date</div>
            <div>(North America)</div>
          </th>
          <th>Genre</th>
          <th>Franchise</th>
          <th>Developer</th>
          <th>ESRB Rating</th>
          <th>Action</th>
        <tr>
          <td>Call of Duty: Black Ops Cold War</td>
          <td>
            <ul class="platformList">
              <li>PlayStation 4</li>
              <li>PlayStation 5</li>
              <li>Windows</li>
              <li>Xbox One</li>
              <li>Xbox Series X/S</li>
            </ul>
          </td>
        <td>11/13/2020</td>
          <td>First-Person Shooter</td>
          <td>Call of Duty</td>
          <td>Activision</td>
          <td>M</td>
          <td>
          <button type="button" class="delButton">Delete</button>
        </td>
        <tr>
          <td>Halo Infinite</td>
          <td>
            <ul class="platformList">
              <li>Windows</li>
              <li>Xbox One</li>
              <li>Xbox Series X/S</li>
            </ul>
          </td>
          <td></td>
          <td>First-Person Shooter</td>
          <td>Halo</td>
          <td>343 Industries</td>
          <td></td>
          <td>
          <button type="button" class="delButton">Delete</button>
        </td>
      </table>
    </div>

    <br/>
    <br/>

    <script src="static/js/del_element.js"></script>
  </body>
</html>